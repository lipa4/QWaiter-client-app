<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_facebook_button_login_silver_background_color_pressed"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tvz.tomislav.qwaiter.ScanActivity"
    tools:showIn="@layout/activity_scan">

    <ImageButton
        android:id="@+id/qr_code_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_qrcode_scan"
        android:scaleType="centerCrop"
        android:background="@color/fui_transparent"
        android:elevation="4dp"
        />

    <ImageButton
        android:id="@+id/nfc_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_code_button"
        app:srcCompat="@drawable/ic_nfc_black_24dp"
        tools:layout_editor_absoluteY="321dp"
        android:scaleType="centerCrop"
        android:elevation="4dp"
        android:background="@color/fui_transparent"/>
</android.support.constraint.ConstraintLayout>
